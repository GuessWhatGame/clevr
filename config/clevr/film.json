{
  "model": {

    "name" : "CLEVR with CBN baseline + classic attention",

    "image":
    {
      "image_input": "raw",
      "dim": [224, 224, 3],
      "normalize": true,

      "resnet_version": 50,
      "finetune" : ["block4"],

      "attention" : {
        "mode": "classic",
        "no_attention_mlp": 256
      },

      "cbn": {
        "use_cbn": true,
        "cbn_embedding_size": 128,
        "excluded_scope_names": ["block1", "block2", "block3"]
      }
    },

    "word_embedding_dim": 100,
    "no_hidden_LSTM": 256,
    "no_LSTM_cell": 1,

    "no_question_mlp": 256,
    "no_picture_mlp": 256,

    "no_hidden_final_mlp": 128,
    "dropout_keep_prob": 0.5,

    "activation": "tanh"
  },

  "optimizer": {
    "no_epoch": 20,
    "learning_rate": 0.0004,
    "batch_size": 32,
    "clip_val": 5
  },

  "dico_name" : "dict.json",
  "seed": -1
}